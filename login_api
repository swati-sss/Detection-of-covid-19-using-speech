      if !UserDefaults.standard.bool(forKey: "didShowSnackBarTest") {
          UserDefaults.standard.set(true, forKey: "didShowSnackBarTest")

          // Use the UIViewController convenience method instead
          self.showLDSnackbar(
              dataModel: LivingDesign.LDSnackbar.Model(
                  message: LocalizedKey.selectPinBeforeRoute.localized,
                  duration: 30
              ),
              additionalInsets: UIEdgeInsets(
                  top: 0,
                  left: LDSpacing.space16,
                  bottom: LDSpacing.space16,
                  right: LDSpacing.space16
              )
          )
      }
