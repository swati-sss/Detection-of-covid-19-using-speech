// MARK: - Reset Methods for Try Again and Done

func resetForTryAgain() {
    // Reset to photo capture mode to retake the picture
    DispatchQueue.main.async {
        self.capturedImage = nil
        self.lastCapturedImage = nil
        self.capturedImageCount = 0
        self.loadingStatus = ""
        self.captureMode = .photo
        self.cameraManager.startCapturing()
    }
}

func resetForNextSection() {
    // Reset everything to scan a new section
    DispatchQueue.main.async {
        self.capturedImage = nil
        self.lastCapturedImage = nil
        self.capturedImageCount = 0
        self.sectionInfo = nil
        self.productInfo = nil
        self.isBarCodeScanned = false
        self.isSectionInfoAvailable = false
        self.didDismissBottomSheet = false
        self.didClickOnBottomSheetAction = false
        self.loadingStatus = ""
        self.bottomSheetStatus = .notValidated
        self.subFlowType = .sectionBarCodeScanner
        self.captureMode = .barcode
        self.cameraManager.startCapturing()
    }
}
