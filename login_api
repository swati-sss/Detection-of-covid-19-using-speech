// SwiftUISuggestedSubView.swift

import SwiftUI
import compass_sdk_ios

struct SwiftUISuggestedSubView: View {
    @ObservedObject var bridge: CompassBridge

    var body: some View {
        VStack(spacing: 8) {
            Button("Display Pin") {
                // Mirror what your SecondViewController does here.
                // If that VC dropped a sample generic/asset pin, call the same SDK API:
                // bridge.compass?.displayPin(uuidList: [...], idType: ..., config: bridge.displayPinConfig.hashMap)
                bridge.consoleLog("Display Pin tapped on SuggestedSubScreen")
            }
            .buttonStyle(.borderedProminent)
            .padding(.top, 8)

            MapRootHost(viewController: bridge.mapRootViewController)
                .background(Color(.systemBackground))
                .clipShape(RoundedRectangle(cornerRadius: 8))
                .padding(.horizontal, 8)
                .frame(maxWidth: .infinity, maxHeight: .infinity)
        }
        .navigationTitle("SuggestedSubScreen")
        .navigationBarTitleDisplayMode(.inline)
    }
}
