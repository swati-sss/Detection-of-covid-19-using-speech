#if DEBUG
private func addGeofenceDebugButtons() {
    let inside = UIButton(type: .system)
    inside.setTitle("Sim: INSIDE", for: .normal)
    inside.addTarget(self, action: #selector(simInside), for: .touchUpInside)

    let outside = UIButton(type: .system)
    outside.setTitle("Sim: OUTSIDE", for: .normal)
    outside.addTarget(self, action: #selector(simOutside), for: .touchUpInside)

    let stack = UIStackView(arrangedSubviews: [inside, outside])
    stack.axis = .horizontal
    stack.spacing = 12
    stack.translatesAutoresizingMaskIntoConstraints = false

    view.addSubview(stack)
    NSLayoutConstraint.activate([
        stack.bottomAnchor.constraint(equalTo: view.safeAreaLayoutGuide.bottomAnchor, constant: -16),
        stack.centerXAnchor.constraint(equalTo: view.centerXAnchor)
    ])
}

@objc private func simInside() {
    serviceLocator.getStatusService().emitGeofenceStateChangeEvent(state: "inside")
}

@objc private func simOutside() {
    serviceLocator.getStatusService().emitGeofenceStateChangeEvent(state: "outside")
}
#endif
