import UIKit
import Foundation
import Combine

class StoreMapsViewController: UIViewController {
    var mapView: StoreMapView
    private let lifecycleHandler: StoreMapLifecycleHandling
    private var cancellable = Set<AnyCancellable>()

    private(set) var stackView: UIStackView = {
        let stackView = UIStackView(axis: .vertical)
        stackView.distribution = .fill
        stackView.backgroundColor = .white
        return stackView
    }()

    init(webViewLoaderViewModel: StoreMapViewInteracting, options: StoreMapView.Options) {
        self.lifecycleHandler = webViewLoaderViewModel
        mapView = StoreMapView(webViewLoaderViewModel: webViewLoaderViewModel, options: options)
        super.init(nibName: nil, bundle: nil)
    }

    required init?(coder: NSCoder) {
        fatalError("init(coder:) has not been implemented")
    }

    deinit {
        cancellable.removeAll()
    }

    override func loadView() {
        super.loadView()
        view.backgroundColor = .white
        view.addAutoLayoutSubview(mapView)

        NSLayoutConstraint.activate([
            mapView.leadingAnchor.constraint(equalTo: view.leadingAnchor),
            mapView.trailingAnchor.constraint(equalTo: view.trailingAnchor),
            mapView.topAnchor.constraint(equalTo: view.safeAreaLayoutGuide.topAnchor),
            mapView.bottomAnchor.constraint(equalTo: view.bottomAnchor)
        ])
    }

    override func viewDidLoad() {
        super.viewDidLoad()
        lifecycleHandler.didConstructView()
    }

    override func viewDidAppear(_ animated: Bool) {
        super.viewDidAppear(animated)
        lifecycleHandler.viewDidAppear()

        mapView.$mapState
            .sink { [weak self] storeMapState in
                guard let storeMapStatesView = self?.children.first as? StoreMapStatesViewController else {
                    Log.debug("Map loading, warning, and error screens are disabled.")
                    return
                }

                guard let storeMapState else {
                    storeMapStatesView.view.isHidden = true
                    return
                }

                storeMapStatesView.storeMapState = storeMapState
                storeMapStatesView.storeMapReloadDelegate = self
                storeMapStatesView.updateMapDisplayForState()
            }.store(in: &cancellable)
    }

    override func viewWillDisappear(_ animated: Bool) {
        super.viewWillDisappear(animated)
        lifecycleHandler.viewWillDisappear()
    }
}

extension StoreMapsViewController: StoreMapReloadDelegate {
    func reloadStoreMap() {
        lifecycleHandler.didConstructView()
    }
}
