#import <React/RCTBridgeModule.h>

@interface RCT_EXTERN_MODULE(CompassSdkRn, NSObject)

RCT_EXTERN_METHOD(initialize:(NSString *)clientSec
                  consumerID:(NSString *)consumerID
                  accountID:(NSString *)accountID
                  tokenType:(NSString *)tokenType
                  storeId:(NSInteger)storeId
                  environment:(NSString *)environment
                  config: (id)config
                  resolve:(RCTPromiseResolveBlock)resolve
                  reject:(RCTPromiseRejectBlock)reject)

RCT_EXTERN_METHOD(getCompassStatus
                  resolve:(RCTPromiseResolveBlock)resolve
                  reject:(RCTPromiseRejectBlock)reject)

RCT_EXTERN_METHOD(displayPins:(NSArray *)uuid
                  type: (NSString *)type
                  config: (NSDictionary*)config
                  resolve:(RCTPromiseResolveBlock)resolve
                  reject:(RCTPromiseRejectBlock)reject)
                  
RCT_EXTERN_METHOD(displayPinsV2:(NSArray *)pins
                  config: (NSDictionary *)displayPinConfig
                  resolve:(RCTPromiseResolveBlock)resolve
                  reject:(RCTPromiseRejectBlock)reject)


RCT_EXTERN_METHOD(getUserDistance:(NSArray *)pins
                  resolve:(RCTPromiseResolveBlock)resolve
                  reject:(RCTPromiseRejectBlock)reject)


RCT_EXTERN_METHOD(centerAndZoom:(NSString *)asset
                  zoomLevel: (NSInteger)zoomLevel)

RCT_EXTERN_METHOD(updateEvent:(NSString *)eventType
                  eventValue:(NSString *)eventValue
                  metadata: (NSDictionary *)metadata
                  resolve:(RCTPromiseResolveBlock)resolve
                  reject:(RCTPromiseRejectBlock)reject)

RCT_EXTERN_METHOD(clearMap:(NSDictionary *)config)

RCT_EXTERN_METHOD(displayMap:(NSString *)workflowType
                  workflowId:(NSString *)workflowId
                  workflowValue:(NSString *)workflowValue
                  resolve:(RCTPromiseResolveBlock)resolve
                  reject:(RCTPromiseRejectBlock)reject)

RCT_EXTERN_METHOD(getLocation:(NSString *)assetId
                  resolve:(RCTPromiseResolveBlock)resolve
                  reject:(RCTPromiseRejectBlock)reject)

RCT_EXTERN_METHOD(getCurrentStoreConfig:(RCTPromiseResolveBlock)resolve
                  reject:(RCTPromiseRejectBlock)reject)

RCT_EXTERN_METHOD(applyFeatureFlagOverrides:(NSDictionary *)overrides
                  resolve:(RCTPromiseResolveBlock)resolve
                  reject:(RCTPromiseRejectBlock)reject)

RCT_EXTERN_METHOD(revertFeatureFlagOverrides:(RCTPromiseResolveBlock)resolve
                  reject:(RCTPromiseRejectBlock)reject)

RCT_EXTERN_METHOD(hasFeatureFlagOverridesApplied:(RCTPromiseResolveBlock)resolve
                  reject:(RCTPromiseRejectBlock)reject)

RCT_EXTERN_METHOD(updateAuthParams:(NSString *)clientSec
                  consumerID:(NSString *)consumerID
                  accountID:(NSString *)accountID)

+ (BOOL)requiresMainQueueSetup
{
  return NO;
}

@end
