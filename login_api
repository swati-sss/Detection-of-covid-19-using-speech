let snackbar = LivingDesign.LDSnackbar(
      dataModel: LivingDesign.LDSnackbar.Model(
          message: LocalizedKey.selectPinBeforeRoute.localized,
          duration: 30
      ),
      onDismiss: { [weak hostView] in
          // Clean up any lingering shadow layers
          DispatchQueue.main.async {
              guard let hostView = hostView else { return }

              // Remove shadow-related subviews that might be left behind
              hostView.subviews.forEach { subview in
                  let className = String(describing: type(of: subview))
                  if className.contains("Shadow") ||
                     className.contains("Elevation") ||
                     className.contains("_LD") {
                      // Check if it's not a legitimate view
                      if subview.constraints.isEmpty && subview.subviews.isEmpty {
                          subview.removeFromSuperview()
                      }
                  }
              }

              // Force layout update
              hostView.setNeedsLayout()
              hostView.layoutIfNeeded()
          }
      }
  )
  snackbar.elevation = nil
  snackbar.layer.masksToBounds = true

  snackbar.showSnackbar(in: hostView) { snackbar in
      [
          snackbar.leadingAnchor.constraint(
              equalTo: hostView.safeAreaLayoutGuide.leadingAnchor,
              constant: LDSpacing.space16
          ),
          snackbar.trailingAnchor.constraint(
              equalTo: hostView.safeAreaLayoutGuide.trailingAnchor,
              constant: -LDSpacing.space16
          ),
          snackbar.bottomAnchor.constraint(
              equalTo: hostView.safeAreaLayoutGuide.bottomAnchor,
              constant: -LDSpacing.space16
          )
      ]
  }
